<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.ToggleGroup?>

<MenuBar prefHeight="40.0" prefWidth="101.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <menus>
      <Menu fx:id="menuLang" mnemonicParsing="false" text="%menubar.lang">
         <items>
            <RadioMenuItem fx:id="ru" mnemonicParsing="false" text="%menubar.lang.russian">
               <toggleGroup>
                  <ToggleGroup fx:id="languageButtons" />
               </toggleGroup>
            </RadioMenuItem>
            <RadioMenuItem fx:id="en" mnemonicParsing="false" text="%menubar.lang.english" toggleGroup="$languageButtons" />
            <RadioMenuItem fx:id="nl" mnemonicParsing="false" text="%menubar.lang.dutch" toggleGroup="$languageButtons" />
            <RadioMenuItem fx:id="se" mnemonicParsing="false" text="%menubar.lang.swedish" toggleGroup="$languageButtons" />
         </items>
      </Menu>
   </menus>
   <padding>
      <Insets left="5.0" top="7.0" />
   </padding>
</MenuBar>
